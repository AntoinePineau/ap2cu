<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Screen" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:stretchColumns">1</item>
        <item name="android:textColor">#28377F</item>
        <item name="android:background">#F9E8F0</item>
        <item name="android:drawSelectorOnTop">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">10sp</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">16sp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Check" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#28377F</item>
        <item name="android:typeface">serif</item>
    </style>
    <style name="Label" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#28377F</item>
        <item name="android:typeface">serif</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="Field" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#28377F</item>
        <item name="android:typeface">serif</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:padding">10sp</item>
    </style>
    <style name="Result" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:textSize">30sp</item>
        <item name="android:padding">10sp</item>
    </style>
</resources>